<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
	"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
	"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="com.mybuckstory.model">	
	<class name="Video" table="Video">
		<cache usage="read-write"/>
	
		<id name="id" column="id" type="long">
			<generator class="native" />
		</id>
	
		<version name="version"></version>		
		
		<property name="title" type="string" column="title" />
		<property name="description" type="string" column="description" />		
				
		<property name="encodedFileName" type="string" column="encoded_file_name" />
		<property name="encodingComMediaID" type="string" column="media_id" />
		<property name="originalFileMimeType" type="string" column="orig_mime_type" />
		<property name="originalFileName" type="string" column="orig_file_name" />
		<property name="previewThumbnailFileName" type="string" column="prev_thumb_file_name" />
		<property name="rawFileName" type="string" column="raw_file_name" />
				
		<property name="lastUpdated" column="last_updated" type="timestamp" />					
		<property name="dateCreated" column="date_created" type="timestamp" />		
		
		<many-to-one name="createdBy" class="User" column="AUTHOR_ID" cascade="none" />
		<many-to-one name="lastUpdatedBy" class="User" column="LAST_UPDATED_ID" cascade="none"/>	
		
		<set name="comments" cascade="all" lazy="true" sort="natural">
			<key column="video_id" />
			<one-to-many class="Comment" />			
		</set>	
	</class>
</hibernate-mapping>